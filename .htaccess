# =====================================
# VIKTORIA-AZ.STORE - MAIN .HTACCESS
# =====================================

RewriteEngine On

# -------------------------------------
# 1) http OR non-www  ->  https + www
# -------------------------------------
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} !^www\.viktoria-az\.store$ [NC]
RewriteRule ^ https://www.viktoria-az.store%{REQUEST_URI} [L,R=301]

# -------------------------------------
# 2) Prevent directory listing (security)
# -------------------------------------
Options -Indexes

# -------------------------------------
# 3) Default charset
# -------------------------------------
AddDefaultCharset UTF-8
