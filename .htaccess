# =====================================
# VIKTORIA-AZ.STORE - MAIN .HTACCESS
# =====================================

RewriteEngine On

# -------------------------------------
# 1) http -> https
# -------------------------------------
RewriteCond %{HTTPS} off
RewriteRule ^ https://www.viktoria-az.store%{REQUEST_URI} [L,R=301]

# -------------------------------------
# 2) non-www -> www
# -------------------------------------
RewriteCond %{HTTP_HOST} !^www\.viktoria-az\.store$ [NC]
RewriteRule ^ https://www.viktoria-az.store%{REQUEST_URI} [L,R=301]

# -------------------------------------
# 3) Prevent directory listing (security)
# -------------------------------------
Options -Indexes

# -------------------------------------
# 4) Default charset
# -------------------------------------
AddDefaultCharset UTF-8
